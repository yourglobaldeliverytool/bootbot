# APEX SIGNALâ„¢ - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# REQUIRED FOR LIVE TRADING MODE
# ============================================================================

# Telegram Integration (required for live signal notifications)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ============================================================================
# REQUIRED FOR TRADING (exchange connections)
# ============================================================================

# Alpaca API (crypto and stock trading)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://api.alpaca.markets

# Polygon API (market data)
POLYGON_API_KEY=your_polygon_api_key_here

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================

# Capital Management (default: $50)
CAPITAL=50

# Risk Per Trade (default: 1.5%)
RISK_PERCENT=1.5

# Log Level (DEBUG, INFO, WARNING, ERROR - default: INFO)
LOG_LEVEL=INFO

# Port for web server (default: 8000, Railway sets this automatically)
PORT=8000

# Database URL (optional - for persistent storage)
DATABASE_URL=postgresql://user:password@host:port/database

# Railway Environment (auto-set, don't change manually)
RAILWAY_ENVIRONMENT=production

# ============================================================================
# OPTIONAL EXTERNAL SERVICES
# ============================================================================

# TradingView Webhook (optional)
TRADINGVIEW_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================================================
# NOTES
# ============================================================================
# - Without TELEGRAM_BOT_TOKEN and TELEGRAM_CHAT_ID, bot runs in VERIFIED_TEST mode
# - Without ALPACA_API_KEY, ALPACA_SECRET_KEY, and POLYGON_API_KEY, trading is disabled
# - The bot will boot safely even without these credentials, but features will be limited